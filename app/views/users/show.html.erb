<div class="row">
    <div class="col-md-3 text-center avatar">
        <%= image_tag @user.profile.avatar.url %>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job-title-icon text-center"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
        <div class="well profile-description profile-block">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
        <% if true # current_user.plan_id == 2 %>
        <div class="well contact-info profile-block">
            <h3>Contact info</h3>
            <h5>Phone Number: <%= @user.profile.phone_number %></h5>
            <h5>Email: <%= @user.profile.contact_email %></h5>
        </div>
        <% else %>
        <i>Please upgrade to Pro plan to see the contact info of <%= @user.profile.first_name %></i>
        <% end %>
    </div>
</div>
